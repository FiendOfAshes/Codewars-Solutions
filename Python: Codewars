#Grasshopper-Summation
def summation(num):
    return sum(range(1, num + 1))

#Maximum & Minmum Values of a List
def minimum(arr):
    return min(arr)

def maximum(arr):
    return max(arr)

#Abbreviate a two word name
def abbrvt(name):
   return ".".join(w[0] for w in name.split()).upper()

#Another solution for Abbreviate a two word name
def abbrevName(name):
   first, last = name.upper().split(' ')
   return first[0] + '.' + last[0]

#Sum Mixed Array
def sm_mx(arr):
   return sum(map(int, arr))

#Square(n)Sum
def sqr_sm(numbers):
   return sum(x**2 for x in numbers)

#print sum of every digit in a number


#reversed strings
def solution(string):
    return string[::-1]

#are you playing banjo?
def areYouPlayingBanjo(name):
    return "{} plays banjo".format(name) if name.startswith("R") or name.startswith("r") else "{} does not play banjo".format(name)

#L1: Set Alarm
def set_alarm(employed, vacation):
    return True if employed and not vacation else False

#count of positives/sum of negatives
def sum_count(arr):
    return [lem([i for i in arr if i > 0]), sum([i for i in arr if i > 0])] if len(arr) != 0 else []

#opposites_attract
def lovefunc(flower1, flower2):
    if flower1%2 == 0 and flower2%2 == 0 or flower1%2 != 0 and flower2%2 != 0:
        return False 
    else:
        return True

#grasshopper-personalised_message
def greet(name, owner):
    if name == owner:
        return "Hello boss"
    else:
        return "Hello guest"

#convert_string_to_camelCase
def camelcase(txt):
    txt = txt.replace("-", "").replace("_", "")
    wrds = txt.split
    return "".join([c.capitalize() if c != wrds[0] else c for c in wrds])

                                       